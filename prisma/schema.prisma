// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}
model User{
     id String @id @default(uuid())
     role String
     name String

}
model offer {
   id String @id @default(uuid())
   name String 
   price Decimal
   discountPerMonth Decimal
   coupleDiscount Decimal
   createdAt DateTime @default(now())
   updatedAt DateTime @updatedAt
}
model opinions {
   id String @id @default(uuid())
   nameOfPerson String 
  imageUrl String
   createdAt DateTime @default(now())
   updatedAt DateTime @updatedAt
}
model recipes {
   id String @id @default(uuid()) 
   name String 
   imageUrl String
   ingredients String
   methodOfPreparation String
   createdAt DateTime @default(now())
   updatedAt DateTime @updatedAt
}
model transformations {
   id String @id @default(uuid()) 
   name String 
   imageUrlBefore String
   imageUrlAfter String
   time Decimal
   createdAt DateTime @default(now())
   updatedAt DateTime @updatedAt
}
model exercises {
   id String @id @default(uuid()) 
   name String 
   url String
   muscleGroup String
   createdAt DateTime @default(now())
   updatedAt DateTime @updatedAt
}

